{
  "name": "beardify",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite",
    "lint": "vue-tsc --noEmit && eslint src/**/*.{vue,ts} && prettier --c ./src/**/*.{ts,vue,json} && stylelint ./src/**/*.{vue,scss}",
    "build": "yarn lint && vite build",
    "fix": "prettier --write ./src/**/*.{ts,vue,json} && stylelint ./src/**/*.{vue,scss} --fix",
    "preview": "yarn build && yarn vite preview",
    "lint:commit": "vue-tsc --noEmit",
    "pre-commit": "yarn lint:commit"
  },
  "dependencies": {
    "@vueuse/core": "^9.0.2",
    "axios": "^0.27.2",
    "date-fns": "^2.29.1",
    "form-urlencoded": "^6.1.0",
    "normalize-diacritics": "^3.0.8",
    "pinia": "^2.0.17",
    "pinia-plugin-persistedstate": "^1.6.3",
    "pkce": "^1.0.0-beta2",
    "vue": "^3.2.37",
    "vue-router": "^4.1.3",
    "vue-slicksort": "^2.0.0-alpha.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "eslint": "^8.20.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.3.0",
    "normalize.css": "^8.0.1",
    "postcss": "^8.4.14",
    "postcss-html": "^1.5.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.0",
    "stylelint": "^14.9.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vue-tsc": "^0.39.2"
  }
}
